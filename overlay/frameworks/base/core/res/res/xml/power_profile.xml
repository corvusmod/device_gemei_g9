  <item name="bluetooth.active">200</item>
  <item name="bluetooth.on">100</item>
  <item name="screen.full">350</item>
  <item name="wifi.on">29</item>
  <item name="wifi.active">140</item>
  <item name="wifi.scan">180</item>
  <item name="dsp.audio">88</item>
  <item name="dsp.video">88</item>
  <item name="radio.active">0</item>
