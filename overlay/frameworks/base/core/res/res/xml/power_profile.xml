      <value>60000</value>
      <value>204000</value>
      <value>408000</value>
      <value>600000</value>
      <value>816000</value>
      <value>1008000</value>
      <value>1200000</value>  
  </array>
  <!-- Power consumption when CPU is idle -->
  <item name="cpu.idle">5</item>
  <!-- Power consumption at different speeds -->
  <array name="cpu.active">
      <value>115</value>
      <value>125</value>
      <value>135</value>
      <value>145</value>
      <value>165</value>
      <value>180</value>
      <value>200</value>
  </array>
